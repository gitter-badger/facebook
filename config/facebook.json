{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "baseUrl": "https://graph.facebook.com",
    "apiVersion": "v1.0",
    "name": "Graph API",
    "description": "a regular old api client",
    "operations": {
        "abstractGet": {
            "httpMethod": "GET",
            "description": "A very poopzoriffic method"
        },
        "getObject": {
            "httpMethod": "GET",
            "uri": "/{+version}{/path*}",
            "responseClass": "ObjectModel",
            "parameters": {
                "version": { "$ref": "Version" },
                "path": { "$ref": "Path" },
                "fields": { "$ref": "Fields" },
                "since": { "$ref": "OptionalQueryString" },
                "until": { "$ref": "OptionalQueryString" },
                "access_token": {"$ref": "AccessToken" }
            }
        },
        "getAppAccessToken": {
            "httpMethod": "GET",
            "uri": "/oauth/access_token",
            "responseClass": "AccessTokenModel",
            "parameters": {
                "client_id": { "$ref": "RequiredQueryString" },
                "client_secret": { "$ref": "RequiredQueryString" },
                "grant_type": {
                    "location": "query",
                    "static": true,
                    "default": "client_credentials"
                }
            }
        },
        "debugToken": {
            "httpMethod": "GET",
            "uri": "/debug_token",
            "responseClass": "DebugTokenModel",
            "parameters": {
                "input_token": { "$ref": "RequiredQueryString" },
                "access_token": { "$ref": "RequiredQueryString" }
            }
        },
        "page": {
            "extends": "getObject",
            "responseClass": "PageModel"
        },
        "user": {
            "extends": "getObject",
            "responseClass": "UserModel"
        },
        "place": {
            "extends": "getObject",
            "responseClass": "PlaceModel"
        },
        "application": {
            "extends": "getObject",
            "responseClass": "ApplicationModel"
        },
        "account": {
            "extends": "getObject",
            "responseClass": "AccountModel"
        },
        "fans": {
            "extends": "getObject",
            "responseClass": "FansModel"
        },
        "collection": {
            "extends": "getObject",
            "responseClass": "CollectionModel"
        },
        "getPage": {
            "extends": "getObject",
            "uri": "/{+version}/{path}?{fields*}",
            "responseClass": "PageModel",
            "parameters": {
                "version": { "$ref": "Version" },
                "path": { 
                    "requried": true,
                    "type": ["number", "string"],
                    "location": "uri"
                },
                "fields": {
                    "required": false,
                    "type": ["array"],
                    "default": [
                        "id",
                        "username",
                        "likes",
                        "talking_about_count",
                        "name",
                        "category",
                        "category_list"
                    ],
                    "location": "uri"
                }
            }
        }
    },
    "models": {
        "AccessToken": {
            "type": "string",
            "description": "A facebook access token for an app, page, or user",
            "location": "query",
            "required": true,
            "filters": ["urldecode"]
        },
        "Token": {
            "$ref": "AccessToken",
            "required": true
        },
        "Version": {
            "description": "Api version number",
            "type": "string",
            "location": "uri",
            "required": true,
            "default": "v1.0"
        },
        "Path": {
            "description": "contains the object id and endpoint",
            "type": "array",
            "location": "uri",
            "required": true
        },
        "Fields": {
            "type": "array",
            "location": "query",
            "required": false,
            "filters": [
                {
                    "method": "join",
                    "args": [",", "@value"]
                }
            ]
        },
        "FacebookId": {
            "sentAs": "id",
            "type": ["number","string"],
            "location": "json",
            "required": true
        },
        "Category": {
            "type": "object",
            "properties": {
                "name": { "$ref": "RequiredString" },
                "facebook_id": {
                    "required": false,
                    "type": ["number", "string"],
                    "location": "json",
                    "sentAs": "id"
                }
            }
        },
        "CategoryList": {
            "type": "array",
            "items": { 
                "type": "object",
                "$ref": "Category" 
            },
            "required": false
        },
        "FacebookPostId": {
            "$ref": "FacebookId",
            "filters": [
                {
                    "method": "explode",
                    "args": ["_", "@value"]
                }
            ]
        },
        "RequiredString": {
            "location": "json",
            "type": "string",
            "required": true
        },
        "RequiredQueryString": {
            "location": "query",
            "type": "string",
            "required": true
        },
        "OptionalString": {
            "location": "json",
            "type": "string",
            "required": false
        },
        "OptionalQueryString": {
            "location": "query",
            "type": "string",
            "required": false
        },
        "ParsedUrl": {
            "type": ["array", "string"],
            "required": false,
            "filters": ["parse_url"]
        },
        "DefaultZero": {
            "location": "json",
            "type": "number",
            "required": false,
            "default": 0
        },
        "Timestamp": {
            "location": "json",
            "type": ["object", "string"],
            "required": false,
            "filters": ["\\DateTime::format"]
        },
        "Gender": {
            "location": "json",
            "enum": [
                "male",
                "female",
                "none"
            ],
            "type": "string",
            "enum": ["male","female"],
            "default": "male",
            "required": false
        },
        "ObjectModel": {
            "type": "object",
            "description": "A object in the Facebook Graph Api.",
            "static": false
        },
        "PageModel": {
            "extends": "ObjectModel",
            "properties": {
                "facebook_id": { "$ref": "FacebookId" },
                "name": { "$ref": "RequiredString" },
                "username": { "$ref": "OptionalString" },
                "category": { "$ref": "RequiredString" },
                "category_list": { "$ref": "CategoryList" }
            }
        },
        "UserModel": {
            "extends": "ObjectModel",
            "properties": {
                "facebook_id": { "$ref": "FacebookId" },
                "name": { "$ref": "RequiredString" },
                "username": { "$ref": "OptionalString" },
                "first_name": { "$ref": "RequiredString" },
                "last_name": { "$ref": "RequiredString" },
                "locale": { "$ref": "OptionalString" },
                "gender": { "$ref": "Gender" }
            }
        },
        "FansModel": {
            "extends": "ObjectModel",
            "properties": {
                "facebook_id": { "$ref": "FacebookId" },
                "fan_count": {
                    "location": "json",
                    "type": "number",
                    "default": 0,
                    "required": true,
                    "sentAs": "likes"
                },
                "talking_about_count": { "$ref": "DefaultZero" }
            }
        },
        "PlaceModel": {
            "extends": "ObjectModel",
            "properties": {
                "facebook_id": { "$ref": "FacebookId" },
                "name": { "$ref": "RequiredString" }
            }
        },
        "PostModel": {
            "type": "object",
            "properties": {
                "type": { "$ref": "RequiredString" },
                "facebook_id": { "$ref": "FacebookId" },
                "status_type": { "$ref": "RequiredString" },
                "message": { "$ref": "OptionalString" },
                "story": { "$ref": "OptionalString" },
                "timeline_visibility": { "$ref": "OptionalString" },
                "created_time": { "$ref": "Timestamp" }
            }
        },
        "PostsModel": {
            "type": "array",
            "items": {
                "$ref": "PostModel"
            }
        },
        "PagingModel": {
            "type": "object",
            "required": false,
            "location": "json",
            "properties": {
                "previous": { "$ref": "ParsedUrl" },
                "next": { "$ref": "ParsedUrl" }
            }
        },
        "CollectionModel": {
            "extends": "ObjectModel",
            "properties": {
                "paging": { "$ref": "PagingModel" },
                "shit": { "sentAs": "data", "type": "object", "location": "json" }
            }
        },
        "AccessTokenModel": {
            "type": "object",
            "properties": {
                "access_token": {
                    "location": "body",
                    "type": "string",
                    "filters": [
                        {
                            "method": "strval",
                            "args": ["@value"]
                        },
                        {
                            "method": "str_replace",
                            "args": ["access_token=", "", "@value"]
                        }
                    ]
                }
            }
        },
        "DebugTokenModel": {
            "type": "object",
            "location": "json",
            "properties": {
                "app_id": { "$ref": "RequiredNumber" },
                "user_id": { "$ref": "RequiredNumber" }
            }
        }
    }
}
